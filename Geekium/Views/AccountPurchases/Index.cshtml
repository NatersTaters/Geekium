@model IEnumerable<Geekium.Models.AccountPurchase>

@{
    ViewData["Title"] = "Purchases";
}

<h1>Account Purchases</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				Date of Purchase
			</th>
			<th>
				Purchase Price
			</th>
			<th>
				Points Gained
			</th>
			<th>
				Details
			</th>
		</tr>
	</thead>
	@foreach (var item in Model)
	{
		<tbody>
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.PurchaseDate)
				</td>
				<td>
					$@Html.DisplayFor(modelItem => item.PurchasePrice)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PointsGained)
				</td>
                <th>
                    <a asp-action="Details" asp-route-id="@Html.DisplayFor(m => item.CartId)"></a>
                </th>
			</tr>
		</tbody>
	}
	</table>
