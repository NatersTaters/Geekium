@model IEnumerable<Geekium.Models.TradeListing>

@{
    ViewData["Title"] = "Index";
}

<h1>Trade Listings</h1>

<body>
    <form method="post" asp-action="FilterTrades">
        <input id="searchBox" type="text" name="searchTrade" placeholder="Search for Trades" value="@ViewBag.Search" />
        <a class="btn btn-primary" data-toggle="collapse" href="#filter" role="button" aria-expanded="false" aria-controls="filterSearch">
            Add Filter
        </a>
        <button class="btn btn-primary" type="submit" title="searchButton">Search Trade</button>

        <div class="@ViewBag.Collapse" id="filter">
            <div class="card card-body">
                <div class="form-group">
                  TBD
                </div>
            </div>
        </div>
    </form>

    <div class="py-2">
        <div class="container">
            @{ var count = 0;}
            @{ var items = 0;}
            @foreach (var item in Model)
            {
                if (count == 0)
                {
                    @:<div class="row">
                    }
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-block">
                                <div class="card-header">
                                    @Html.DisplayFor(modelItem => item.TradeTitle)
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">Seller: @Html.DisplayFor(modelItem => item.Seller.Account.UserName)</h5>
                                    <p class="card-text">Trade For: @Html.DisplayFor(modelItem => item.TradeFor)</p>
                                    <a class="stretched-link" asp-action="Details" asp-route-id="@item.TradeListingId"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    items++;

                    if (count == 2)
                    {
                        count = 0;
                    @:</div><br />
                }
                else
                {
                    count++;
                }
            }

            @if (items == 0)
            {
                <div>
                    <br />
                    <h2>Nothing matches the search/filter</h2>
                </div>
            }
        </div>
    </div>
</body>