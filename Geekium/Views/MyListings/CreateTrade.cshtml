@model Geekium.Models.TradeListing

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TradeListing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTrade">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="SellerId" class="control-label"></label>
                <select asp-for="SellerId" class ="form-control" asp-items="ViewBag.SellerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TradeTitle" class="control-label"></label>
                <input asp-for="TradeTitle" class="form-control" />
                <span asp-validation-for="TradeTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TradeDescription" class="control-label"></label>
                <input asp-for="TradeDescription" class="form-control" />
                <span asp-validation-for="TradeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TradeFor" class="control-label"></label>
                <input asp-for="TradeFor" class="form-control" />
                <span asp-validation-for="TradeFor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TradeDate" class="control-label"></label>
                <input asp-for="TradeDate" class="form-control" />
                <span asp-validation-for="TradeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TradeItemType" class="control-label"></label>
                <input asp-for="TradeItemType" class="form-control" />
                <span asp-validation-for="TradeItemType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TradeQuantity" class="control-label"></label>
                <input asp-for="TradeQuantity" class="form-control" />
                <span asp-validation-for="TradeQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
