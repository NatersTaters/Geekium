@model Geekium.Models.TradeListing

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit for @Model.TradeTitle</h1>

<hr />
<div class="row">
	<div class="col-md-6">
        <form asp-action="EditTrade" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TradeListingId" />
            <div class="form-group" hidden>
                <label asp-for="SellerId" class="control-label"></label>
                <select asp-for="SellerId" class="form-control" asp-items="ViewBag.SellerId"></select>
                <span asp-validation-for="SellerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TradeTitle" class="control-label"></label>
                <textarea required asp-for="TradeTitle" class="form-control" maxlength="100"></textarea>
                <span asp-validation-for="TradeTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TradeDescription" class="control-label"></label>
                <textarea required asp-for="TradeDescription" class="form-control" rows="3" maxlength="255"></textarea>
                <span asp-validation-for="TradeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TradeFor" class="control-label"></label>
                <input required asp-for="TradeFor" class="form-control" />
                <span asp-validation-for="TradeFor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TradeQuantity" class="control-label"></label>
                <input required asp-for="TradeQuantity" class="form-control" />
                <span asp-validation-for="TradeQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TradeItemType" class="control-label"></label>
                <select asp-for="TradeItemType" class="form-control" asp-items="ViewBag.TradeItemType"></select>
            </div>
            <div class="form-group">
                <label asp-for="TradeDate" class="control-label"></label>
                <input readonly value="@ViewBag.TradeDate" class="form-control" />
                <span asp-validation-for="TradeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TradeLocation" class="control-label"></label>
                <input readonly asp-for="TradeLocation" class="form-control" />
                <span asp-validation-for="TradeLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
	</div>
	<div style="width:50%;text-align:center">
		@if (Model.TradeImage != null)
		{
			<img class="displayDetailImage" src="@("~/images/"+Model.TradeImage)" asp-append-version="true" width="250" height="250" />
			<p>Current Image</p>
		}
	</div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
