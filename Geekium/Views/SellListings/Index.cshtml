@model IEnumerable<Geekium.Models.SellListing>

@{
    ViewData["Title"] = "Index";
}

<h1>Sell Listings</h1>

<body>

    <form method="post" asp-action="FilterProducts">
        <input id="searchBox" type="text" name="searchProduct" placeholder="Search for Products" value="@ViewBag.Search" />
        <a class="btn btn-primary" data-toggle="collapse" href="#filter" role="button" aria-expanded="false" aria-controls="filterSearch">
            Add Filter
        </a>
        <button class="btn btn-primary" type="submit" title="searchButton">Search Item</button>

        <div class="@ViewBag.Collapse" id="filter">
            <div class="card card-body">
                <div class="form-group">
                    Price:
                    <input style="width:25%;" name="minPrice" id="minPrice" type="text" placeholder="From" value="@ViewBag.MinPrice"/> -
                    <input style="width:25%;" name="maxPrice" id="maxPrice" type="text" placeholder="To" value="@ViewBag.MaxPrice" />
                </div>
            </div>
        </div>
    </form>

    <div class="py-2">
        <div class="container">
            @{ var count = 0;}
            @{ var items = 0;}
            @foreach (var item in Model)
            {
                if (count == 0)
                {
                    @:<div class="row">
                }

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-block">
                            <div class="card-header">
                                @Html.DisplayFor(modelItem => item.SellTitle)
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Seller: @Html.DisplayFor(modelItem => item.Seller.Account.UserName)</h5>
                                <p class="card-text">Price: @Html.DisplayFor(modelItem => item.SellPrice)</p>
                                <a class="stretched-link" asp-action="Details" asp-route-id="@item.SellListingId"></a>
                            </div>
                        </div>
                    </div>
                </div>
                items++;

                if (count == 2)
                {
                    count = 0;
                    @:</div><br />
                }
                else
                {
                    count++;
                }
            }

            @if (items == 0)
            {
                <div><br />
                    <h2>Nothing matches the search/filter</h2>
                </div>
            }
        </div>
    </div>
</body>
